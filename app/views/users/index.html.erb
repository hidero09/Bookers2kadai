<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>

<div>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
</div>
    <%= link_to edit_user_path(@user) do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
</div>

<%= link_to edit_user_path(@user),class:'navi-link text-light' do %>
     <i class="fas fa-user-cog"></i>
    <% end %>

<div class="col-md-8 offset-md-1">

  <h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<h1>Users</h1>
<div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
           <% @users.each do |user| %>
        <tr>
           <td>
            <div>
                <%= image_tag 'sample-author1.jpg' %>
            </div>
            </td>
            <td>
             <div>
               <%= user.name %>
             </div>
            </td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
           <% end %>
      </tbody>
    </table>
</div>
</div>
</div>
</div>